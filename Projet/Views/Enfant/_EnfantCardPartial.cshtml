@model Projet.Models.Enfant

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card">
        <a asp-action="Detail" asp-controller="Enfant" asp-route-id="@Model.EnfantId">
            <img src="~/img/@Model.ImageFileName" class="card-img-top" alt="@Model.Nom">
        </a>
        <div class="card-body">
            <h5 class="card-title">@Model.Nom</h5>
            <!-- Bouton Voir les détails -->
            <a asp-action="Detail" asp-controller="Enfant" asp-route-id="@Model.EnfantId" class="btn btn-primary">
                <i class="fas fa-eye"></i> Voir les détails
            </a>
            <!-- Bouton Modifier -->
            <a asp-action="UpdateEnfant" asp-controller="Enfant" asp-route-id="@Model.EnfantId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <!-- Bouton Supprimer -->
            <form method="post" asp-action="DeleteEnfant" asp-controller="Enfant">
                <input type="hidden" name="enfantId" value="@Model.EnfantId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
</div>
