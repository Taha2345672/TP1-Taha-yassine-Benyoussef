@model Projet.ViewModels.PageRechercheViewModel

@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="border p-3 mb-4 bg-primary text-white">
        <h2 class="custom-heading-style">Recherche modele avions</h2>
    </div>

    <a href="@Url.Action("CreateEnfant", "Enfant")" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Ajouter Enfant
    </a>

    <form method="get" action="@Url.Action("Recherche", "Enfant")">
        <!-- ... Vos champs de formulaire ici ... -->
    </form>

    <div class="row mt-4">
        @foreach (var enfant in Model.Resultats)
        {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <a href="/Enfant/Detail/@enfant.EnfantId">
                            <img src="~/img/@enfant.ImageFileName" class="card-img-top" alt="@enfant.Nom">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@enfant.Nom</h5>

                            <!-- Bouton Voir les détails -->
                            <a href="/Enfant/Detail/@enfant.EnfantId" class="btn btn-primary">
                                <i class="fas fa-eye"></i> Voir les détails
                            </a>

                            <!-- Bouton Modifier -->
                            <a href="/Enfant/Editer/@enfant.EnfantId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>

                            <!-- Bouton Supprimer -->
                            <form method="post" action="@Url.Action("Supprimer", "Enfant")">
                                <input type="hidden" name="enfantId" value="@enfant.EnfantId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
        }
    </div>

    @if (Model.Criteres.ParentFilter)
    {
            <div class="row mt-4">
                <div class="col-md-12">
                    <ul class="pagination justify-content-center">
                        <!-- ... Pagination ici ... -->
                    </ul>
                </div>
            </div>
    }
</div>
